# Git LFS設定 - 大きなデータファイル用
*.tif filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text

# 大きなGeoJSONファイルのみLFS管理（backend用）
backend/**/*.geojson filter=lfs diff=lfs merge=lfs -text
backend/**/*.json filter=lfs diff=lfs merge=lfs -text

# GitHub Pages用の小さいファイルは通常のGit管理
frontend/public/data/administrative/admin_simple.geojson !filter !diff !merge text=auto
frontend/public/data/administrative/kasen/rivers_simple.geojson !filter !diff !merge text=auto
frontend/public/data/administrative/keisya/slope_simple.geojson !filter !diff !merge text=auto

# 大きなフロントエンドファイルはLFS管理
frontend/public/data/administrative/kitamirinsyou/**/*.geojson filter=lfs diff=lfs merge=lfs -text
frontend/public/data/administrative/kitamirinsyou/**/*.json filter=lfs diff=lfs merge=lfs -text

# package.json と package-lock.json は通常のGit管理
package.json !filter !diff !merge text=auto
package-lock.json !filter !diff !merge text=auto
**/package.json !filter !diff !merge text=auto
**/package-lock.json !filter !diff !merge text=auto
